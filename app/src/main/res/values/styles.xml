<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main activity theme. -->
    <style name="CatalogTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.PopularMovies.Catalog</item>
    </style>

    <!-- Detail activity theme. -->
    <style name="DetailTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.PopularMovies.Detail</item>
    </style>

    <!-- Action bar styles -->
    <style name="ActionBar.Solid.PopularMovies" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <!-- Action bar style for catalog activity-->
    <style name="ActionBar.Solid.PopularMovies.Catalog">
        <item name="displayOptions">showTitle</item>
    </style>

    <!-- Action bar style for detail activity-->
    <style name="ActionBar.Solid.PopularMovies.Detail">
        <item name="displayOptions">showTitle</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Detail header -->
    <style name="CenteredScalable">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="DetailHeaderText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailHeaderText.MovieTitle">
        <item name="android:textSize">@dimen/text_size_display1</item>
    </style>

    <style name="DetailHeaderText.ReleaseDate">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="ContentContainer">
        <item name="android:padding">@dimen/content_padding</item>
    </style>

    <style name="BodyElement">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="BodyElement.First">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="BodyElement.NotFirst">
        <item name="android:layout_marginTop">@dimen/body_elements_space</item>
    </style>

    <style name="BodyElement.NotFirst.Image">
        <item name="android:layout_marginTop">@dimen/body_image_space</item>
    </style>

    <style name="BodyElement.First.CardViewTitle">
        <item name="android:textSize">@dimen/text_size_subhead</item>
    </style>
    
    <style name="MyCardView" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/content_padding</item>
        <item name="android:layout_marginRight">@dimen/content_padding</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="TabWidgetText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_tab_widget</item>
    </style>
</resources>
